@model IEnumerable<B05ASPC13_Ecommerce2.ViewModel.USerwithRole>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Add Profile Picture</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Security</a></li>
                    <li class="breadcrumb-item active">ProfilePic </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
<a asp-controller="ManageUser" asp-action="Create"  style="float:right; font-size:20px" >Add Pic</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Picture</td>
            <td>Name</td>
            <td>Role</td>
            <td>...</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(item.ProfilePic)" height="150px" width="200px" />
                </td>
                <td>@item.FullName</td>
                <td>@item.Role</td>
                <td>...</td>
            </tr>
        }
    </tbody>
</table>

